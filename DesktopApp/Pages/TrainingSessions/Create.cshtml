@page
@model DesktopApp.Pages.TrainingSessions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Training Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TrainingSession.ScheduledDate" class="control-label"></label>
                <input asp-for="TrainingSession.ScheduledDate" class="form-control" />
                <span asp-validation-for="TrainingSession.ScheduledDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainingSession.TeamId" class="control-label">Team</label>
                <select asp-for="TrainingSession.TeamId" class ="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrainingSession.CoachId" class="control-label">Coach</label>
                <select asp-for="TrainingSession.CoachId" class ="form-control" asp-items="ViewBag.CoachId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
